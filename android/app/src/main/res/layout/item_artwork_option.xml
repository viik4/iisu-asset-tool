<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardOption"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_sm"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/theme_surface"
    app:cardCornerRadius="12dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/theme_border_color"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_sm"
        android:gravity="center_vertical">

        <!-- Thumbnail - Adaptive aspect ratio for icons/heroes/logos -->
        <FrameLayout
            android:id="@+id/frameThumbnail"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:minHeight="60dp">

            <ImageView
                android:id="@+id/imageThumbnail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:background="@color/theme_card_background"
                tools:src="@drawable/ic_iisu_home" />

            <!-- Loading spinner for thumbnail -->
            <ProgressBar
                android:id="@+id/progressThumbnail"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:visibility="gone" />

        </FrameLayout>

        <!-- Info section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_md"
            android:orientation="vertical">

            <!-- Source label -->
            <TextView
                android:id="@+id/textSource"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/continuum"
                android:textColor="@color/accent_cyan"
                tools:text="SteamGridDB" />

            <!-- Dimensions -->
            <TextView
                android:id="@+id/textDimensions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textSize="12sp"
                android:fontFamily="@font/calsans"
                android:textColor="@color/theme_text_secondary"
                android:visibility="gone"
                tools:text="1024x1024"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Selection indicator -->
        <ImageView
            android:id="@+id/iconSelected"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="@dimen/spacing_sm"
            android:src="@drawable/ic_check_circle"
            android:visibility="gone"
            app:tint="@color/accent_cyan" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
