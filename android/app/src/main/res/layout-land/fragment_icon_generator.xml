<?xml version="1.0" encoding="utf-8"?>
<!-- Landscape layout - horizontal layout for efficient use of screen space -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md">

        <!-- Title - smaller in landscape -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/icon_generator_title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/theme_text_primary" />

        <!-- Accent line under title -->
        <View
            android:id="@+id/accentLine"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/spacing_xs"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:background="@drawable/bg_accent_line" />

        <!-- Main content - horizontal layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <!-- Left column: Search controls -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/spacing_sm">

                <!-- Search Input Card - compact -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/theme_surface"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/theme_border_color">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_sm">

                        <!-- Search Input -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:hint="@string/icon_search_hint">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editTextSearch"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minHeight="44dp"
                                android:inputType="text"
                                android:imeOptions="actionSearch"
                                android:textSize="14sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Platform Selector -->
                        <TextView
                            android:id="@+id/labelPlatform"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_sm"
                            android:text="@string/icon_platform_label"
                            android:textSize="13sp"
                            android:textStyle="bold"
                            android:textColor="@color/theme_text_primary" />

                        <Spinner
                            android:id="@+id/spinnerPlatform"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:background="@drawable/spinner_background"
                            android:padding="@dimen/spacing_sm"
                            android:popupBackground="@color/theme_surface" />

                        <!-- Search Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/buttonSearch"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="@dimen/spacing_sm"
                            android:text="@string/icon_generate_button"
                            android:textSize="13sp"
                            style="@style/IisuPrimaryButton"
                            app:backgroundTint="@null"
                            app:cornerRadius="8dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Progress and Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/spacing_sm">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminate="true"
                        android:visibility="gone"
                        app:indicatorSize="20dp"
                        app:trackThickness="2dp" />

                    <TextView
                        android:id="@+id/textResultCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/spacing_xs"
                        android:textSize="12sp"
                        android:textColor="@color/theme_text_secondary"
                        tools:text="5 results found" />

                </LinearLayout>

            </LinearLayout>

            <!-- Right column: Preview and save -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/spacing_sm">

                <!-- Preview Card - smaller in landscape -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardPreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/theme_surface"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="2dp"
                    app:strokeColor="@color/theme_border_color">

                    <ImageView
                        android:id="@+id/imagePreview"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="fitCenter"
                        android:padding="@dimen/spacing_sm"
                        android:background="@color/theme_card_background"
                        android:contentDescription="@string/icon_generator_title"
                        tools:src="@android:drawable/ic_menu_gallery" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Save Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonSave"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:text="@string/icon_save_button"
                    android:textSize="13sp"
                    android:enabled="false"
                    style="@style/IisuSecondaryButton"
                    app:backgroundTint="@null"
                    app:icon="@drawable/ic_save"
                    app:iconGravity="textStart"
                    app:iconSize="18dp"
                    app:cornerRadius="8dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
