<?xml version="1.0" encoding="utf-8"?>
<!-- Landscape layout - more compact platform cards -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/theme_surface"
    app:strokeWidth="1dp"
    app:strokeColor="@color/theme_border_color"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- Platform Icon - smaller in landscape -->
        <ImageView
            android:id="@+id/imagePlatformIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="fitCenter"
            android:contentDescription="Platform icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/ic_iisu_home" />

        <!-- Platform Name - smaller text -->
        <TextView
            android:id="@+id/textPlatformName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/theme_text_primary"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/imagePlatformIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="PlayStation" />

        <!-- ROM Count - smaller text -->
        <TextView
            android:id="@+id/textRomCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="@color/theme_text_secondary"
            app:layout_constraintTop_toBottomOf="@id/textPlatformName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="42 ROMs" />

        <!-- Missing Badge - smaller -->
        <TextView
            android:id="@+id/textMissingBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingHorizontal="6dp"
            android:paddingVertical="1dp"
            android:background="@drawable/badge_missing"
            android:textSize="8sp"
            android:textColor="@color/theme_text_primary"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/textRomCount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="5 missing"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
