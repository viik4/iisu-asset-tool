<?xml version="1.0" encoding="utf-8"?>
<!-- Landscape layout - smaller thumbnails to fit in constrained height -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardOption"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="8dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/surface_variant"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp">

        <!-- Thumbnail - adaptive size for different artwork types -->
        <FrameLayout
            android:id="@+id/frameThumbnail"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/imageThumbnail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:background="@color/card_background"
                tools:src="@drawable/ic_iisu_home" />

            <!-- Loading spinner for thumbnail -->
            <ProgressBar
                android:id="@+id/progressThumbnail"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:visibility="gone" />

            <!-- Selection indicator -->
            <ImageView
                android:id="@+id/iconSelected"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="top|end"
                android:layout_margin="2dp"
                android:src="@drawable/ic_check_circle"
                android:visibility="gone"
                app:tint="@color/accent_cyan" />

        </FrameLayout>

        <!-- Source label -->
        <TextView
            android:id="@+id/textSource"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:textSize="9sp"
            android:textStyle="bold"
            android:textColor="@color/accent_cyan"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="SteamGridDB" />

        <!-- Dimensions (optional) -->
        <TextView
            android:id="@+id/textDimensions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="8sp"
            android:textColor="@color/text_secondary"
            android:visibility="gone"
            tools:text="1024x1024"
            tools:visibility="visible" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
